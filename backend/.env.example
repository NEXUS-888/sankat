# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control!

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=globemap
DB_USER=postgres
DB_PASSWORD=you

# Database pool settings (optional)
# DB_POOL_MIN_SIZE=1
# DB_POOL_MAX_SIZE=10

# ============================================
# JWT AUTHENTICATION
# ============================================

# Secret key for JWT token signing
# IMPORTANT: Generate a strong random key using:
# python -c "import secrets; print(secrets.token_hex(32))"
# Must be at least 32 characters long
SECRET_KEY=GENERATE_A_SECURE_RANDOM_KEY_AT_LEAST_32_CHARS_LONG

# JWT token expiration (in minutes)
# ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# ============================================
# SECURITY SETTINGS
# ============================================

# CORS allowed origins (comma-separated)
# CORS_ORIGINS=http://localhost:8080,http://localhost:5173

# Cookie security (set to true in production with HTTPS)
# COOKIE_SECURE=false

# CSRF token length (default: 32)
# CSRF_TOKEN_LENGTH=32

# ============================================
# PAYMENT PROCESSING (STRIPE)
# ============================================

# Stripe API keys
# Get from: https://dashboard.stripe.com/test/apikeys
# Use test keys (sk_test_...) for development
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Webhook secret for Stripe events
# Get from: https://dashboard.stripe.com/test/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ============================================
# API SETTINGS
# ============================================

# API host and port
# API_HOST=0.0.0.0
# API_PORT=8000

# Enable API documentation (set to false in production)
# DOCS_ENABLED=true

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================

# Redis connection (for session storage in production)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# Email service (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password
# SMTP_FROM=noreply@sankat.com

# ============================================
# LOGGING & MONITORING
# ============================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# LOG_LEVEL=INFO

# Sentry DSN (for error tracking)
# SENTRY_DSN=

# ============================================
# DEVELOPMENT SETTINGS
# ============================================

# Enable hot reload
# RELOAD=true

# Debug mode
# DEBUG=false
